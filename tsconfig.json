{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "types": ["react", "react-dom", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": ["src", "dev", "vitest.setup.ts"]
}
